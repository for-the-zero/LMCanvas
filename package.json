{
    "name": "lmcanvas",
    "version": "1.0.0",
    "main": "main.js",
    "type": "module",
    "author": "for_the_zero",
    "description": "UI generated by LLM, Interact with LLM",
    "scripts": {
        "electron:start": "electron .",
        "electron:build": "vite build && electron-builder",
        "dev:vite": "vite",
        "dev:electron": "electron .",
        "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
        "build": "vite build && electron-builder",
        "build:vite": "vite build",
        "build:electron": "electron-builder build --win --x64",
        "start": "electron ."
    },
    "build": {
        "appId": "io.forthezero.lmcanvas",
        "productName": "LMCanvas",
        "directories": {
            "output": "builds"
        },
        "files": [
            "main.js",
            "dist/**/*",
            "renderer/**/*",
            "icon.png",
            "package.json"
        ],
        "asar": true,
        "win": {
            "target": ["nsis", "zip"],
            "icon": "icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "icon.ico",
            "uninstallerIcon": "icon.ico",
            "installerHeaderIcon": "icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "CapsTools"
        }
    },
    "dependencies": {
        "@fluentui/react-components": "^9.64.0",
        "asakjs": "^1.0.2",
        "highlight.js": "^11.11.1",
        "openai": "^5.3.0",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-markdown": "^10.1.0",
        "react-syntax-highlighter": "^15.6.1",
        "remark-html": "^16.0.1"
    },
    "devDependencies": {
        "@types/react": "^18.3.1",
        "@types/react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.4.1",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^36.4.0",
        "electron-builder": "^26.0.12",
        "globals": "^16.0.0",
        "vite": "^6.3.5",
        "wait-on": "^8.0.3"
    }
}
